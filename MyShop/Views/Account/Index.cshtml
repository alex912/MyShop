<div class="main-container col2-left-layout">
    <div class="main-before-top-container"></div>
    <div class="main container">
        <div class="inner-container">
            <div class="preface"></div>
            <div class="col-main grid12-9 grid-col2-main no-gutter">
                <div class="my-account">
                    <div class="dashboard">
                        <div class="page-title">
                            <h1>My Dashboard</h1>
                        </div>
                        <div class="welcome-msg">
                            <p class="hello"><strong>Hello, @ViewBag.UserName !</strong></p>
                            <p>From your My Account Dashboard you have the ability to view a snapshot of your recent account activity and update your account information. Select a link below to view or edit information.</p>
                        </div>
                        <div class="box-account box-info">
                            <div class="box-head">
                                <h2>Account Information</h2>
                            </div>
                            <div class="col2-set">
                                <div class="col-1">
                                    <div class="box">
                                        <div class="box-title">
                                            <h3>Contact Information</h3>
                                            <a href="http://ultimo.infortis-themes.com/demo/second2/customer/account/edit/">Edit</a>
                                        </div>
                                        <div class="box-content">
                                            <p>
                                                Username: @ViewBag.UserName<br />
                                                Skype:    @ViewBag.Skype<br />
                                                <a href="/account/edit/">Change Password</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="box">
                                        <div class="box-title">
                                            <h3>Last orders:</h3>
                                            <a href="/account/orders/">Edit</a>
                                        </div>
                                        <div class="box-content">
                                            <p>
                                                ...
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col2-set">
                                <div class="box">
                                    <div class="box-title">
                                        <h3>Wow Information</h3>
                                        <a href="/account/wow/">Manage Addresses</a>
                                    </div>
                                    <div class="box-content">
                                        <div class="col-1">
                                            <h3>Battletag: @ViewBag.BattleTag</h3>
                                            <address>
                                                Default Server:    @ViewBag.DefaultServer<br />
                                                Default Character: @ViewBag.DefaultCharacter<br />
                                                Default Fraction:  @ViewBag.DefaultFraction
                                                <a href="/account/wow/">Edit information</a>
                                            </address>
                                        </div>
  
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @RazorHelpers.RenderLeftMenu(1)
            <div class="postscript"></div>
        </div>
    </div>
</div>
